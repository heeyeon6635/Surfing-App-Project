<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">


    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="WAVE SURFER"
            android:textColor="#87CEEB"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom2_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

    </LinearLayout>

    <ImageView
        android:id="@+id/btn1"
        android:layout_width="178dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="184dp"
        app:srcCompat="@drawable/swicon" />

    <ImageView
        android:id="@+id/btn2"
        android:layout_width="169dp"
        android:layout_height="179dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="26dp"
        app:srcCompat="@drawable/memoicon" />

    <ImageView
        android:id="@+id/btn3"
        android:layout_width="181dp"
        android:layout_height="186dp"
        android:layout_below="@+id/btn1"
        android:layout_alignEnd="@+id/btn2"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="158dp"
        app:srcCompat="@drawable/calicon" />

    <ImageView
        android:id="@+id/btn4"
        android:layout_width="170dp"
        android:layout_height="187dp"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignEnd="@+id/btn3"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="-158dp"
        app:srcCompat="@drawable/mapicon" />


</RelativeLayout>